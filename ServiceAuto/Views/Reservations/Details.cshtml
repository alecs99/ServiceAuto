@model ServiceAuto.Models.Reservations

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Reservations</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Service LastName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt>
            Service price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service.ServicePrice)
        </dd>
        <dt>
            Mechanics
        </dt>
        @foreach (var mechanic in Model.Mechanics)
        {
            <dd>
                @mechanic.LastName @mechanic.FirstName
            </dd>
        }

    </dl>
</div>
<p>
    @if (!User.IsInRole("Admin"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.IdReservation })
    }
    
    @Html.ActionLink("Back to List", "Index")
</p>
