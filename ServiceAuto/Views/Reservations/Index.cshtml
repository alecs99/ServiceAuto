@model IEnumerable<ServiceAuto.Models.Reservations>

@{
    ViewBag.Title = "Index";
}

<h2>Reservations list</h2>
@if (!User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add a new Reservation", "NewReservation")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (!User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.IdReservation }) 
                
            }
            @Html.ActionLink("Details", "Details", new { id = item.IdReservation }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.IdReservation })
        </td>
    </tr>
}

</table>
